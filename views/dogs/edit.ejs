<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= dog.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/dogs/<%= dog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="dog[name]" value="<%= dog.name %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="number" name="dog[price]" value="<%= dog.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                  <label for="date">Dates</label>
               <input class="form-control" type="date" name="dog[date1]" id="date" value="<%= dog.date1 %>">
               <input class="form-control" type="date" name="dog[date2]"  id="date" value="<%= dog.date2 %>">
               </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="dog[image]" value="<%= dog.image %>">
                </div>
                <div class="form-group">
                    
                     <input class="form-control" type="text" name="dog[description]" value="<%= dog.description %>">
                </div>
                <div class="form-group">
              <label for="location">Location</label>
             <input class="form-control" type="text" name="location" id="location" value="<%= dog.location %>">
             </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/dogs">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

